@model Lessplastic.Models.ViewModels.Polls.PollViewModel

@{
    ViewData["Title"] = "Създай анкета";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr />
<form asp-action="Create" class="mx-auto half-width">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Title" class="control-label">Заглавие</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Answers" class="control-label">Отговори</label>
        <input asp-for="Answers" class="form-control" />
        <span asp-validation-for="Answers" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-color text-color" />
    </div>
</form>