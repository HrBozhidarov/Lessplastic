@model Lessplastic.Models.ViewModels.Videos.VideoViewModel

@{
    ViewData["Title"] = "Създай на видео";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr class="bg-dark" />
<form asp-action="Create" class="mx-auto half-width">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Title" class="control-label">Заглавие</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Описание</label>
        <textarea asp-for="Description" class="form-control" rows="5" cols="40"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="YoutubeLink" class="control-label">Линк от Ютуб</label>
        <input asp-for="YoutubeLink" class="form-control" />
        <span asp-validation-for="YoutubeLink" class="text-danger"></span>
    </div>
    <div class="form-group text-center">
        <input type="submit" value="Създай" class="btn btn-color text-color" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>