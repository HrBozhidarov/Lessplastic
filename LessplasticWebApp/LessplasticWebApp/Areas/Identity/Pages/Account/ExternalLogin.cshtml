@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Регистрация";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<h4 class="text-center">свързана с вашият @Model.LoginProvider акаунт.</h4>
<hr />

<p class="text-info text-center">
    Вие успешно се автентекирахте с <strong>@Model.LoginProvider</strong>.
    Моля въведете Емайл, Парола и Град за успешна регистрация.
</p>

<form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="mx-auto half-width">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Input.Email"></label>
        <input asp-for="Input.Email" class="form-control" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Username">Потребителско име</label>
        <input asp-for="Input.Username" class="form-control" />
        <span asp-validation-for="Input.Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.TownName">Име на град</label>
        <input asp-for="Input.TownName" class="form-control" />
        <span asp-validation-for="Input.TownName" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-color text-color">Регистрирай се</button>
</form>
<br />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

