@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Изтриване на акаунт";
    ViewData["ActivePage"] = ManageNavPages.DeletePersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="alert alert-warning" role="alert">
    <p>
        <strong>Изтриването на акаунта ви ще изтрие всичката информация за вас и няма да може да бъде възбновен.</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post" class="form-group">
        <div asp-validation-summary="All" class="text-danger"></div>
        @if (Model.RequirePassword)
        {
        <div class="form-group">
            <label asp-for="Input.Password"></label>
            <input asp-for="Input.Password" class="form-control" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        }
        <button class="btn btn-submit" type="submit">Изтрии акаунта ми</button>
    </form>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}