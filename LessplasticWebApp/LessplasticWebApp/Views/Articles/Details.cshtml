@model Lessplastic.Models.ViewModels.Articles.DetailsArticleViewModel

@{
    ViewData["Title"] = "Details";
}
<div class="text-center mt-3">
    <img src=@Model.ArticleImage class="responsive" />
</div>
<br />
<h1 class="text-center">@Model.Title</h1>
<div class="row col-md-12">
    <h5 class="text-center col-md-6">Създадена: @Model.CreatedOn.ToShortDateString()</h5>
    <h5 class="text-center col-md-6">Прегледи: @Model.Views</h5>
</div>
<br />
<div class="container d-flex justify-content-around">
    <text>@Model.Content</text>
</div>
<div class="text-center mt-3">
    <img src=@Model.ContentImage class="responsive" />
</div>
<br />
<div class="container d-flex justify-content-around">
    <text>@Model.AdditionalContent</text>
</div>
@if (Model.AdditionalContentImage != null)
{
    <div class="text-center mt-3">
        <img src=@Model?.AdditionalContentImage class="responsive" />
    </div>
}
<br />
<hr />
<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="fb-comments" data-href="https://localhost:44351/Articles/Details/@Model.Id" data-width="100%" data-numposts="5"></div>
    </div>
</div>
<hr class="hr-2 bg-dark" />
<div class="row">
    @if (User.IsInRole("Admin"))
    {
        <div class="mx-auto">
            <a asp-area="Admin" asp-controller="Articles" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-color text-color">Промени</a>
        </div>
        <div class="mx-auto">
            <a asp-area="Admin" asp-controller="Articles" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-color text-color">Изтрии</a>
        </div>
    }
    <div class="mx-auto">
        <button onclick="goBack()" class="btn btn-color text-color">Назад</button>
    </div>
</div>
<br />
