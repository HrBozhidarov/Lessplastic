@model Lessplastic.Models.ViewModels.Home.CollectionIndexViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="row col-lg-12">
    <div class="col-lg-8 text-center">
        <div class="mt-2">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
                </ol>
                <div class="carousel-inner">
                    @{
                        var counter = 1;
                    }
                    @foreach (var article in Model.NewArticles)
                    {
                        if (counter > 1)
                        {
                            <div class="carousel-item">
                                <img src="@article.TitleImage" class="responsive">
                                <a asp-controller="Articles" asp-action="Details" asp-route-id="@article.Id">
                                    <h5 class="text-black">@article.Title</h5>
                                    <p class="text-black">@article.ShortContent</p>
                                </a>
                            </div>
                        }
                        else
                        {
                            <div class="carousel-item active">
                                <img src="@article.TitleImage" class="responsive">
                                <a asp-controller="Articles" asp-action="Details" asp-route-id="@article.Id">
                                    <h5 class="text-black">@article.Title</h5>
                                    <p class="text-black">@article.ShortContent</p>
                                </a>
                            </div>
                        }

                        counter++;
                    }
                </div>
                <br />
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
    <div class="col-lg-4 mt-2 mr-auto">
        <div class="fb-page" data-href="https://www.facebook.com/LessplasticBulgaria" data-tabs="timeline" data-small-header="false" data-adapt-container-width="true" data-height="400" data-hide-cover="false" data-show-facepile="true"><blockquote cite="https://www.facebook.com/LessplasticBulgaria" class="fb-xfbml-parse-ignore"><a href="https://www.facebook.com/LessplasticBulgaria">Lessplastic Bulgaria</a></blockquote></div>
    </div>
</div>
<br />
<div class="container">
    <div class="row col-md-12">
        <div class="col-md-6">
            <h2>Обикновени</h2>
            <hr />
            @foreach (var article in Model.TopRegularArticles)
            {
                <a asp-controller="Articles" asp-action="Details" asp-route-id="@article.Id">
                    <div class="media mt-2 mb-2">
                        <img class="mr-3" width="84" height="84" src="@article.TitleImage">
                        <div class="media-body text-black">
                            <h5 class="mt-0">@article.Title</h5>
                            @article.ShortContent
                        </div>
                    </div>
                </a>
            }
        </div>
        <div class="col-md-6">
            <h2>Научни</h2>
            <hr />
            @foreach (var article in Model.TopScienceArticles)
            {
                <a asp-controller="Articles" asp-action="Details" asp-route-id="@article.Id">
                    <div class="media mt-2 mb-2">
                        <img class="mr-3" width="84" height="84" src="@article.TitleImage">
                        <div class="media-body text-black">
                            <h5 class="mt-0">@article.Title</h5>
                            @article.ShortContent
                        </div>
                    </div>
                </a>
            }
        </div>
        <div class="col-md-6">
            <h2>За Деца</h2>
            <hr />
            @foreach (var article in Model.TopKidsArticles)
            {
                <a asp-controller="Articles" asp-action="Details" asp-route-id="@article.Id">
                    <div class="media mt-2 mb-2">
                        <img class="mr-3" width="84" height="84" src="@article.TitleImage">
                        <div class="media-body text-black">
                            <h5 class="mt-0">@article.Title</h5>
                            @article.ShortContent
                        </div>
                    </div>
                </a>
            }
        </div>
        <div class="col-md-6">
            <h2>Проучвания</h2>
            <hr />
            @foreach (var article in Model.NewEducations)
            {
                <a asp-controller="Educations" asp-action="Details" asp-route-id="@article.Id">
                    <div class="media mt-2 mb-2">
                        <img class="mr-3" width="84" height="84" src="@article.TitleImage">
                        <div class="media-body text-black">
                            <h5 class="mt-0">@article.Title</h5>
                            @article.ShortContent
                        </div>
                    </div>
                </a>
            }
        </div>
        <div class="col-md-6">
            <h2>Видеа</h2>
            <hr />
            @foreach (var video in Model.NewVideos)
            {
                <a asp-controller="Videos" asp-action="Details" asp-route-id="@video.Id">
                    <div class="media mt-2 mb-2">
                        <img class="mr-3" width="84" height="84" src="https://img.youtube.com/vi/@video.YoutubeLink/mqdefault.jpg" alt="tube img" />
                        <div class="media-body text-black">
                            <h5 class="mt-0">@video.Title</h5>
                            @video.ShortContent
                        </div>
                    </div>
                </a>
            }
        </div>
        <div class="col-md-6">
            <h2>Събития</h2>
            <hr />
            @foreach (var myEvent in Model.NewEvents)
            {
                <a asp-controller="Events" asp-action="Details" asp-route-id="@myEvent.Id">
                    <div class="media mt-2 mb-2">
                        <div class="media-body text-black">
                            <h5 class="mt-0">@myEvent.Title</h5>
                            @myEvent.ShortContent
                        </div>
                    </div>
                </a>
            }
            <hr />
            <h2>Анкета: </h2>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-text container justify-content-around">@Model.NewPoll.Title</h5>
                    @if (Model.NewPoll.Users.Any(x => x.LessplasticUser.UserName == this.User.Identity.Name))
                    {
                        <p class="text-center">
                            Гласували: @Model.NewPoll.Users.Count
                            @foreach (var answer in Model.NewPoll.Answers)
                            {
                                <div class="btn-group" role="group" aria-label="Basic example">
                                    <button type="button" class="btn btn-color text-color" disabled>@answer.Name : @answer.Voters</button>
                                </div>
                            }
                        </p>
                    }
                    else
                    {
                        <p class="text-center">
                            Гласували: @Model.NewPoll.Users.Count
                        </p>
                        @foreach (var answer in Model.NewPoll.Answers)
                        {
                            @if (User.Identity.IsAuthenticated)
                            {
                                <div class="btn-group" role="group" aria-label="Basic example">
                                    <a asp-area="" asp-controller="Polls" asp-action="AddParticipant" asp-route-id="@Model.NewPoll.Id" asp-route-idAnswer="@answer.Id" class="btn btn-color text-color">@answer.Name</a>
                                </div>
                            }
                            else
                            {
                                <div class="btn-group" role="group" aria-label="Basic example">
                                    <button type="button" class="btn btn-color text-color" disabled>@answer.Name : @answer.Voters</button>
                                </div>
                            }
                        }
                    }

                </div>
            </div>
        </div>
    </div>
</div>
