@model Lessplastic.Models.ViewModels.Home.CollectionIndexViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="row col-lg-12">
    <div class="col-lg-8 text-center">
        <div class="mt-2">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
                </ol>
                <div class="carousel-inner">
                    @{
                        var counter = 1;
                    }
                    @foreach (var article in Model.NewArticles)
                    {
                        if (counter > 1)
                        {
                            <div class="carousel-item">
                                <img src="@article.TitleImage" class="responsive">
                                <a asp-controller="Articles" asp-action="Details" asp-route-id="@article.Id">
                                    <h5 class="text-black">@article.Title</h5>
                                    <p class="text-black">@article.ShortContent</p>
                                </a>
                            </div>
                        }
                        else
                        {
                            <div class="carousel-item active">
                                <img src="@article.TitleImage" class="responsive">
                                <a asp-controller="Articles" asp-action="Details" asp-route-id="@article.Id">
                                    <h5 class="text-black">@article.Title</h5>
                                    <p class="text-black">@article.ShortContent</p>
                                </a>
                            </div>
                        }

                        counter++;
                    }
                </div>
                <br />
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
    <div class="col-lg-4 mt-2 mr-auto">
        <div class="fb-page" data-href="https://www.facebook.com/LessplasticBulgaria" data-tabs="timeline" data-small-header="false" data-adapt-container-width="true" data-height="400" data-hide-cover="false" data-show-facepile="true"><blockquote cite="https://www.facebook.com/LessplasticBulgaria" class="fb-xfbml-parse-ignore"><a href="https://www.facebook.com/LessplasticBulgaria">Lessplastic Bulgaria</a></blockquote></div>
    </div>
</div>
<br />
