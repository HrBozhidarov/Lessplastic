@model Lessplastic.Models.ViewModels.Home.CollectionIndexViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="row text-center">
    <div class="mx-auto half-width mt-2">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
            </ol>
            <div class="carousel-inner">
                @{
                    var counter = 1;
                }
                @foreach (var article in Model.NewArticles)
                {
                    if (counter > 1)
                    {
                        <div class="carousel-item">
                            <img src="@article.TitleImage" class="responsive">
                            <a asp-controller="Articles" asp-action="Details" asp-route-id="@article.Id">
                                <h5 class="text-black">@article.Title</h5>
                                <p class="text-black">@article.ShortContent</p>
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item active">
                            <img src="@article.TitleImage" class="responsive">
                            <a asp-controller="Articles" asp-action="Details" asp-route-id="@article.Id">
                                <h5 class="text-black">@article.Title</h5>
                                <p  class="text-black">@article.ShortContent</p>
                            </a>
                        </div>
                    }

                    counter++;
                }
            </div>
            <br />
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>

<br />
<div class="container">
    <div class="row col-md-12">
        <div class="col-md-4">
            <h2>Обикновени</h2>
            <hr />
            @foreach (var article in Model.TopRegularArticles)
            {
                <a asp-controller="Articles" asp-action="Details" asp-route-id="@article.Id">
                    <div class="mt-2 mb-2">
                        <div class="card bg-dark text-white">
                            <img class="card-img responsive" src="@article.TitleImage">
                            <div class="card-img-overlay">
                                <h5 class="card-title">@article.Title</h5>
                                <p class="card-text">@article.ShortContent</p>
                            </div>
                        </div>
                    </div>
                </a>
            }
        </div>
        <div class="col-md-4">
            <h2>Научни</h2>
            <hr />
            @foreach (var article in Model.TopScienceArticles)
            {
                <a asp-controller="Articles" asp-action="Details" asp-route-id="@article.Id">
                    <div class="mt-2 mb-2">
                        <div class="card bg-dark text-white">
                            <img class="card-img responsive" src="@article.TitleImage">
                            <div class="card-img-overlay">
                                <h5 class="card-title">@article.Title</h5>
                                <p class="card-text">@article.ShortContent</p>
                            </div>
                        </div>
                    </div>
                </a>
            }
        </div>
        <div class="col-md-4">
            <h2>За Деца</h2>
            <hr />
            @foreach (var article in Model.TopKidsArticles)
            {
                <a asp-controller="Articles" asp-action="Details" asp-route-id="@article.Id">
                    <div class="mt-2 mb-2">
                        <div class="card bg-dark text-white">
                            <img class="card-img responsive" src="@article.TitleImage">
                            <div class="card-img-overlay">
                                <h5 class="card-title">@article.Title</h5>
                                <p class="card-text">@article.ShortContent</p>
                            </div>
                        </div>
                    </div>
                </a>
            }
        </div>
    </div>
</div>

