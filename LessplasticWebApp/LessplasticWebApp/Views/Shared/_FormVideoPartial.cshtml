@model Lessplastic.Models.ViewModels.Videos.UpdateDeleteVideoViewModel

@{
    ViewData["Title"] = "_FormVideoPartial";
}

<div class="form-group">
    <label asp-for="Title" class="control-label"></label>
    <input asp-for="Title" value="@Model?.Title" disabled="@Model?.DisabledValue" class="form-control" />
    <span asp-validation-for="Title" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Description" class="control-label"></label>
    <textarea asp-for="Description" value="@Model?.Description" disabled="@Model?.DisabledValue" class="form-control" rows="5" cols="50"></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="YoutubeLink" class="control-label"></label>
    <input asp-for="YoutubeLink"  value="@Model?.YoutubeLink" disabled="@Model?.DisabledValue" class="form-control" />
    <span asp-validation-for="YoutubeLink" class="text-danger"></span>
</div>