@model Lessplastic.Models.ViewModels.Videos.DetailsVideoViewModel

@{
    ViewData["Title"] = "Детайли";
}

<h2 class="text-center">@Model.Title</h2>
<hr class="bg-dark" />
<div class="row">
    <div class="col-6">
        <div class="embed-responsive embed-responsive-16by9">
            <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/@Model.YoutubeLink" allowfullscreen></iframe>
        </div>
    </div>
    <div class="col-6">
        <p class="text-center">@Model.Description</p>
    </div>
</div>
<br />
<hr class="hr-2 bg-dark" />
<div class="row">
    @if (User.IsInRole("Admin"))
    {
        <div class="mx-auto">
            <a asp-area="Admin" asp-controller="Videos" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-color text-color">Промени</a>
        </div>
        <div class="mx-auto">
            <a asp-area="Admin" asp-controller="Videos" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-color text-color">Изтрии</a>
        </div>
    }
    <div class="mx-auto">
        <a asp-controller="Videos" asp-action="All" class="btn btn-color text-color">Назад</a>
    </div>
</div>